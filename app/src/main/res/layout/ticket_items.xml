<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ticket_number"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ticket_subject"
        app:layout_constraintStart_toEndOf="@id/ticket_number"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/ticket_number"
        app:layout_constraintBottom_toBottomOf="@id/ticket_number"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:ellipsize="end"/>
</android.support.constraint.ConstraintLayout>